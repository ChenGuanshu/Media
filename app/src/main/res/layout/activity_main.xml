<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/camera2_to_surface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="camera2_to_surface"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/camera2_to_glsurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="camera2_to_glsurface"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/playback_to_glsurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="playback_to_glsurface"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/playback_to_custom_glsurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="playback_to_custom_glsurface"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/playback_to_custom_gltexture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="playback_to_custom_gltexture"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/camera_playback_to_glsurface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="camera_playback_to_glsurface"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>
